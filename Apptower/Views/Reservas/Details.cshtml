@model Apptower.Models.Reserva

@{
    ViewData["Title"] = "Details";
}


<div>
    <div class="card">
        <div class="card-header">
            <h4>Reserva</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    Tipo de reserva:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoReserva)
                </dd>

                <dt class="col-sm-2">
                    Fecha de la reserva:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaReserva)
                </dd>

                <dt class="col-sm-2">
                    Espacio a reservar:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EspacioReserva)
                </dd>

                <dt class="col-sm-2">
                    Cantidad de personas que participan:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CantidadPersonas)
                </dd>

                <dt class="col-sm-2">
                    Nombre del propietario de la reserva:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdUsuarioNavigation.Nombre)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@Model?.IdReserva">Editar</a> |
            <a class="btn btn-light" asp-action="Index">Cancelar</a>
        </div>
    </div>
</div>