@model Apptower.Models.Reserva

@{
    ViewData["Title"] = "Edit";
}

<h1 class="row justify-content-center">Editar Reserva</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4 card">
        <form asp-action="Edit" class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdReserva" />
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label">Nombre: </label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoReserva" class="control-label">Tipo de Reserva:</label>
                <select asp-for="TipoReserva" class="form-control">
                    <option value="Zona Humeda">Zona Humeda</option>
                    <option value="Parqueadero">Parqueadero</option>
                    <option value="Salon Social">Salon Social</option>
                </select>
                <span asp-validation-for="TipoReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaReserva" class="control-label">Fecha de la reserva:</label>
                <input asp-for="FechaReserva" class="form-control" />
                <span asp-validation-for="FechaReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EspacioReserva" class="control-label">Espacio especifico a reservar:</label>
                <select asp-for="EspacioReserva" class="form-control">
                    <option value="Piscina">Piscina</option>
                    <option value="Zauna">Zauna</option>
                    <option value="Parqueadero">Parqueadero</option>
                    <option value="Salon Social">Salon Social</option>
                </select>
                <span asp-validation-for="EspacioReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadPersonas" class="control-label">Cantidad de personas que participan de la reserva</label>
                <input asp-for="CantidadPersonas" class="form-control" />
                <span asp-validation-for="CantidadPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-success" />
                <a class="btn btn-light" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}