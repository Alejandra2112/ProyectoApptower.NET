@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('registroForm');
            form.addEventListener('submit', function (event) {
                const contrasena = document.getElementById('Contrasena').value;
                const confirmarContrasena = document.getElementById('ConfirmarContrasena').value;
                const confirmarContrasenaError = document.getElementById('confirmarContrasenaError');

                if (contrasena !== confirmarContrasena) {
                    confirmarContrasenaError.textContent = 'Las contraseñas no coinciden. Por favor, inténtalo de nuevo.';
                    event.preventDefault(); // Solo previene el envío si las contraseñas no coinciden
                } else {
                    confirmarContrasenaError.textContent = ''; // Borra el mensaje de error si las contraseñas coinciden
                }
            });
        });
    </script>



