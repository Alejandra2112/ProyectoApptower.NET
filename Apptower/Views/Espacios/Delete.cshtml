@model Apptower.Models.Espacio

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<body class="light">
    <div class="wrapper vh-100">
        <div class="align-items-center h-100 d-flex w-50 mx-auto">
            <div class="mx-auto text-center">
                <h3 class="display-1 m-0 font-weight-bolder text-muted" style="font-size:80px;">¿Seguro?</h3>
                <h4 class="mb-1 text-muted font-weight-bold">¿Quieres eliminar este @Model.TipoEspacio.ToLower() ?</h4>
                <p class="mb-3 text-muted"> Vas a eliminar al @Model.TipoEspacio.ToLower(), @Model.NombreEspacio
                    si haces esto los parqueaderos y visites asociados tambien se eliminaran</p>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdEspacio" />
                    <input type="submit" value="Eliminar definitivamente" class="btn btn-lg btn-danger px-5" />
                    <a asp-action="Index" class="btn btn-lg btn-primary px-5">Regresar</a>
                </form>


            </div>
        </div>
    </div>
</body>

