@model Apptower.Models.Vehiculo

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro que quieres eliminar esta placa @Html.DisplayFor(model => model.Placa)?</h3>
<hr />
<div class="card">
    <div class="card-body">

        <dl class="row">
            <dt class="col-sm-2">
                Placa:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Placa)
            </dd>
            <dt class="col-sm-2">
                Tipo Usuario:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoUsuarioVehiculo)
            </dd>
            <dt class="col-sm-2">
                Nombre:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombrePropietarioVehiculo)
            </dd>
        </dl>

        <form asp-action="Delete" class="footer">
            <input type="hidden" asp-for="IdVehiculo" />
            <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
            <a class="btn btn-light" asp-action="Index">Cancelar</a>
        </form>
    </div>
</div>
</div>