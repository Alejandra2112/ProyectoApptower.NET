@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
  
    .login-container {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .login-form {
        width: 600px;
        
        padding: 40px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.6);
    }

    .login-logo {
        text-align: center;
        margin-bottom: 20px;
    }

        .login-logo img {
            max-width: 100px;
            height: auto;
        }
</style>

<div class="login-container">
    <div class="col-md-5">
        <div class="login-form">
            <div class="login-logo">
                <img src="https://i.ibb.co/KL47c1Y/Logo-Apptower.png" alt="APPTOWER Logo" />
                <h2>APPTOWER</h2>
            </div>
            <form id="account" method="post">
              
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Email" class="form-label">Correo</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
                   
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                @* <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div> *@
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Ingresar</button>
                </div>
                <div>
                    <br />
                    <p style="text-align:center">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¿No puedes acceder? Registrate </a>
                    </p>
                    
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
